<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Teste de Proficiência", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in_as_admin? %>
          <li><%= link_to "Estudantes", students_path %></li>
          <li><%= link_to "Cursos", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Gerência <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Perfil", current_admin %></li>
              <li><%= link_to "Configurações", edit_admin_path(current_admin) %></li>
              <li><%= link_to "Solicitações", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sair", logout_admins_path, method: "delete" %>
              </li>
            </ul>
          </li>

        <% else %>
          <% if logged_in_as_student? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Conta <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Perfil", current_student %></li>
                <li><%= link_to "Configurações", edit_student_path(current_student) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sair", logout_path, method: "delete" %>
                </li>
              </ul>
            </li>
          <% else %>
            <li><%= link_to "Entrar", login_path %></li>
          <% end %>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
